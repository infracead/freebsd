# aliases
alias ls='ls --color -I'
alias grep='grep --color'
alias egrep='egrep --color'
alias fgrep='fgrep --color'
alias tshark='thark --color'
alias pkg='sudo pkg'
alias rem='sudo pkg remove'
alias us='sudo freebsd-update fetch && sudo freebsd-update install'
alias uu='sudo pkg update && sudo pkg upgrade'
alias bas='sudo bastille'
alias lbas='sudo bastille list'
alias sys='sudo sysrc'
alias pfctl='sudo pfctl'
alias service='sudo service'
alias rise='sudo reboot'
alias die='sudo poweroff'
alias ifconfig='sudo ifconfig'
alias sv='sudo vim'
alias ins='sudo pkg install -y'
alias se='pkg search'